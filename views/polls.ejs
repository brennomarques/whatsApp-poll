<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Nova Enquete
            </div>
            <div class="card-body">
                <form id="pollForm">
                    <div class="mb-3">
                        <label for="targetNumber" class="form-label">Número do WhatsApp</label>
                        <input type="text" class="form-control" id="targetNumber" required>
                        <small class="text-muted">Ex: 11999999999</small>
                    </div>
                    <div class="mb-3">
                        <label for="question" class="form-label">Pergunta</label>
                        <input type="text" class="form-control" id="question" required>
                    </div>
                    <div id="optionsContainer">
                        <div class="mb-3">
                            <label class="form-label">Opções</label>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control option-input" required>
                                <button type="button" class="btn btn-danger remove-option" disabled>
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control option-input" required>
                                <button type="button" class="btn btn-danger remove-option" disabled>
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button type="button" id="addOption" class="btn btn-secondary mb-3">
                        Adicionar Opção
                    </button>
                    <button type="submit" class="btn btn-primary w-100" id="submitPoll">
                        Criar Enquete
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Enquetes Enviadas</span>
                <div class="input-group" style="width: 300px;">
                    <input type="text" class="form-control" id="filterNumber" placeholder="Filtrar por número">
                    <button class="btn btn-outline-secondary" type="button" id="filterButton">Filtrar</button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Número</th>
                                <th>Pergunta</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tbody id="pollsList">
                            <!-- Preenchido via JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

